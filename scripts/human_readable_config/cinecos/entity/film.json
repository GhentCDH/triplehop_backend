{
    "data": [
        {
            "system_name": "title",
            "display_name": "Title",
            "type": "String"
        },
        {
            "system_name": "year",
            "display_name": "Release year",
            "type": "Int"
        },
        {
            "system_name": "imdb_id",
            "display_name": "IMDb ID",
            "type": "String"
        },
        {
            "system_name": "wikidata_id",
            "display_name": "Wikidata ID",
            "type": "String"
        }
    ],
    "display": {
        "title": "$title ($year)",
        "layout": [
            {
                "label": "General",
                "fields": [
                    {
                        "field": "$title"
                    },
                    {
                        "label": "Mentioned titles",
                        "field": "$r_mentioned_film_title->$title"
                    },
                    {
                        "field": "$year"
                    },
                    {
                        "field": "$imdb_id",
                        "type": "online_identifier",
                        "base_url": "https://www.imdb.com/title/"
                    },
                    {
                        "field": "$wikidata_id",
                        "type": "online_identifier",
                        "base_url": "https://www.wikidata.org/wiki/"
                    },
                    {
                        "field": "$wikidata_id",
                        "label": "Wikidata images",
                        "type": "wikidata_images"
                    }
                ]
            }
        ]
    },
    "es_data": [
        {
            "system_name": "title",
            "display_name": "Title",
            "selector_value": "$title",
            "type": "text"
        },
        {
            "system_name": "mentioned_titles",
            "display_name": "Mentioned titles",
            "selector_value": "$r_mentioned_film_title->$title",
            "type": "[text]"
        },
        {
            "system_name": "year",
            "display_name": "Production year",
            "selector_value": "$year",
            "type": "integer"
        },
        {
            "system_name": "director",
            "display_name": "Directors",
            "base": "$r_film_person",
            "filter": "$r_film_person.$type == director",
            "parts": {
                "id": {
                    "selector_value": "$r_film_person->$id",
                    "type": "integer"
                },
                "name": {
                    "selector_value": "$r_film_person->$name",
                    "type": "text"
                }
            },
            "type": "nested"
        },
        {
            "system_name": "actor",
            "display_name": "Actors",
            "base": "$r_film_person",
            "filter": "$r_film_person.$type == actor",
            "parts": {
                "id": {
                    "selector_value": "$r_film_person->$id",
                    "type": "integer"
                },
                "name": {
                    "selector_value": "$r_film_person->$name",
                    "type": "text"
                }
            },
            "type": "nested"
        },
        {
            "system_name": "distributor",
            "display_name": "Distributors",
            "base": "$r_film_company",
            "filter": "$r_film_company.$type == distributor",
            "parts": {
                "id": {
                    "selector_value": "$r_film_company->$id",
                    "type": "integer"
                },
                "name": {
                    "selector_value": "$r_film_company->$name",
                    "type": "text"
                }
            },
            "type": "nested"
        },
        {
            "system_name": "production_company",
            "display_name": "Production companies",
            "base": "$r_film_company",
            "filter": "$r_film_company.$type == production_company",
            "parts": {
                "id": {
                    "selector_value": "$r_film_company->$id",
                    "type": "integer"
                },
                "name": {
                    "selector_value": "$r_film_company->$name",
                    "type": "text"
                }
            },
            "type": "nested"
        },
        {
            "system_name": "country",
            "display_name": "Countries",
            "base": "r_film_country",
            "parts": {
                "id": {
                    "selector_value": "$r_film_country->$id",
                    "type": "integer"
                },
                "name": {
                    "selector_value": "$r_film_country->$name",
                    "type": "text"
                }
            },
            "type": "nested"
        }
    ],
    "es_display": {
        "title": "Search films",
        "filters": [
            {
                "filters": [
                    {
                        "filter": "$title",
                        "type": "autocomplete"
                    },
                    {
                        "filter": "$mentioned_titles",
                        "type": "autocomplete"
                    },
                    {
                        "filter": "$year",
                        "type": "histogram_slider",
                        "interval": 10
                    },
                    {
                        "filter": "$director"
                    },
                    {
                        "filter": "$actor"
                    },
                    {
                        "filter": "$distributor"
                    },
                    {
                        "filter": "$production_company"
                    },
                    {
                        "filter": "$country"
                    }
                ]
            }
        ],
        "columns": [
            {
                "column": "$title",
                "sortable": true,
                "main_link": true
            },
            {
                "column": "$mentioned_titles",
                "sortable": true
            },
            {
                "column": "$year",
                "sortable": true
            },
            {
                "column": "$director",
                "sortable": true,
                "link": true
            }
        ]
    }
}
