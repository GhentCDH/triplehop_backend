{
    "data": [
        {
            "system_name": "original_id",
            "display_name": "Original id",
            "type": "Int"
        },
        {
            "system_name": "name",
            "display_name": "Name",
            "type": "String"
        },
        {
            "system_name": "first_names",
            "display_name": "First names",
            "type": "[String]"
        },
        {
            "system_name": "last_name",
            "display_name": "Last name",
            "type": "String"
        },
        {
            "system_name": "suffix",
            "display_name": "Suffix",
            "type": "String"
        },
        {
            "system_name": "info",
            "display_name": "Info",
            "type": "String"
        },
        {
            "system_name": "imdb_id",
            "display_name": "IMDb ID",
            "type": "String"
        },
        {
            "system_name": "wikidata_id",
            "display_name": "Wikidata ID",
            "type": "String"
        }
    ],
    "display": {
        "title": "$name",
        "layout": [
            {
                "label": "General",
                "fields": [
                    {
                        "field": "$name"
                    },
                    {
                        "field": "$first_names",
                        "type": "list"
                    },
                    {
                        "field": "$last_name"
                    },
                    {
                        "field": "$suffix"
                    },
                    {
                        "field": "$info"
                    },
                    {
                        "field": "$imdb_id",
                        "type": "online_identifier",
                        "base_url": "https://www.imdb.com/title/"
                    },
                    {
                        "field": "$wikidata_id",
                        "type": "online_identifier",
                        "base_url": "https://www.wikidata.org/wiki/"
                    }
                ]
            }
        ]
    },
    "es_data": [
        {
            "system_name": "name",
            "display_name": "Name",
            "selector_value": "$name",
            "type": "text"
        },
        {
            "system_name": "function",
            "display_name": "Functions",
            "selector_value": "$ri_film_person->$display_name $ri_film_person.$type $||$ $ri_venue_person->$display_name $ri_venue_person.$type $||$ $ri_company_person->$display_name $ri_company_person.$type",
            "type": "[text]"
        },
        {
            "system_name": "venue",
            "display_name": "Venues",
            "base": "$ri_venue_person",
            "parts": {
                "id": {
                    "selector_value": "$ri_venue_person->$id",
                    "type": "integer"
                },
                "name": {
                    "selector_value": "$ri_venue_person->$name",
                    "type": "text"
                }
            },
            "type": "nested"
        },
        {
            "system_name": "company",
            "display_name": "Companies",
            "base": "$ri_company_person",
            "parts": {
                "id": {
                    "selector_value": "$ri_company_person->$id",
                    "type": "integer"
                },
                "name": {
                    "selector_value": "$ri_company_person->$name",
                    "type": "text"
                }
            },
            "type": "nested"
        },
        {
            "system_name": "film",
            "display_name": "Films",
            "base": "$ri_film_person",
            "parts": {
                "id": {
                    "selector_value": "$ri_film_person->$id",
                    "type": "integer"
                },
                "name": {
                    "selector_value": "$ri_film_person->$title",
                    "type": "text"
                }
            },
            "type": "nested"
        }
    ],
    "es_display": {
        "title": "Search persons",
        "filters": [
            {
                "filters": [
                    {
                        "filter": "$name",
                        "type": "autocomplete"
                    },
                    {
                        "filter": "$function",
                        "type": "dropdown"
                    },
                    {
                        "filter": "$venue"
                    },
                    {
                        "filter": "$company"
                    },
                    {
                        "filter": "$film"
                    }
                ]
            }
        ],
        "columns": [
            {
                "column": "$name",
                "sortable": true
            },
            {
                "column": "$function",
                "sortable": true
            }
        ]
    }
}
